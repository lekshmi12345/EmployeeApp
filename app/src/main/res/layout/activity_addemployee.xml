<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
android:layout_margin="8dp"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:text="Employee code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/ecode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:text="NAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:text="DESIGNATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/desig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView android:text="MOBILE NUMBER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/mbno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton android:text="SUBMIT"
        android:layout_margin="5dp"
        android:id="@+id/submit"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
